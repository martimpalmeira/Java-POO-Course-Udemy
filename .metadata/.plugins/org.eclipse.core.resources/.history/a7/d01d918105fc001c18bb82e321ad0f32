package exercises.secao18;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;
import java.text.DecimalFormat;
import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Date;

public class Test {

	public static void main(String[] args) throws ParseException {
		
		DecimalFormat df = new DecimalFormat("0.00");

		SimpleDateFormat sdf = new SimpleDateFormat("dd/MM/yyyy");

		String path = "/Users/junior/Desktop/arquivo-1-a.csv";
		
		Consulta consulta = null;

		try (BufferedReader br = new BufferedReader(new FileReader(path))) {

			String line = br.readLine();
			
			
			
			line = br.readLine();
			for (int i = 0; i < 10; i++) {
				 
				String lineSplit[] = line.split(";");

				Date data = sdf.parse(lineSplit[0]);
				String paciente = lineSplit[1];
				String convenio = lineSplit[2];
				String servico = lineSplit[3];
				String medico = lineSplit[4];
				
				lineSplit[6] = lineSplit[6].replaceAll(",", ".");
				Integer quantidade = Integer.parseInt(lineSplit[5]);
				Double valor = Double.parseDouble(lineSplit[6]);

			
				
				consulta.addConsulta(new Consulta(data, paciente, convenio, servico, medico, quantidade, valor));
				
				line = br.readLine();
				
			}
			
			

		} catch (IOException e) {
			System.out.println(e.getMessage());
		}
		
		for(Consulta c: consulta.getConsultas()) {
			System.out.println(c);
		}
	}
}
