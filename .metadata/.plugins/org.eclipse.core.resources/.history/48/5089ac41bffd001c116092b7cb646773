package exercises.secao18.practice219.model.services;

import java.time.LocalDate;
import java.time.format.DateTimeFormatter;
import java.time.temporal.TemporalAccessor;
import java.util.ArrayList;

public class InstallmentService {

	public static void main(String[] args) {

		DateTimeFormatter dtf = DateTimeFormatter.ofPattern("dd/MM/yyyy");
		TemporalAccessor date = dtf.parse("25/06/2018");
		LocalDate data = LocalDate.from(date);

		ArrayList<LocalDate> dates = new ArrayList<>();
		dates = installmentsDates(data, 3);
		for (LocalDate i : dates) {
			System.out.println(dtf.format(i));
		}
	}

	public static ArrayList<LocalDate> installmentsDates(LocalDate initial, Integer numberOfIntsallments) {

		ArrayList<LocalDate> dates = new ArrayList<>();

		for (int i = 1; i <= numberOfIntsallments; i++) {
			LocalDate newDate = initial.plusMonths(i);
			dates.add(newDate);
		}

		return dates;
	}

}
